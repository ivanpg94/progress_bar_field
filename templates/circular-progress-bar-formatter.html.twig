<div class="circular-progress-bar">
  <svg viewBox="0 0 36 36" class="circular-chart">
    <path class="circle-bg"
          d="M18 2.0845
                a 15.9155 15.9155 0 0 1 0 31.831
                a 15.9155 15.9155 0 0 1 0 -31.831"
          fill="none"
          stroke="#eee"
    stroke-width="2.8" />

    <path class="circle"
          stroke-dasharray="{{ percentage }}, 100"
          d="M18 2.0845
                a 15.9155 15.9155 0 0 1 0 31.831
                a 15.9155 15.9155 0 0 1 0 -31.831"
          fill="none"
          stroke="{{ color }}"
    stroke-width="2.8"
    stroke-linecap="round" />
    <text x="18" y="20.35" class="percentage" fill="{{ text_color }}">{{ percentage }}%</text>
  </svg>
</div>
